{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDirs": [
            "./src"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        },
        "inlineSourceMap": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true
    },
    "exclude": [
        "__tests__"
    ]
}