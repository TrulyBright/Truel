{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "outDir": "./dist",
        "rootDirs": [
            "./src"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        },
        "inlineSourceMap": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "experimentalDecorators": true,
    }
}